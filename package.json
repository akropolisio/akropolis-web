{
  "name": "akropolis-web",
  "description": "Code shared between Akropolis web services.",
  "scripts": {
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist/ && rm -rf node_modules",
    "build": "lerna run build",
    "start": "lerna run --parallel --no-bail start -- -- --verbose --noClean",
    "lint": "lerna run lint --parallel",
    "lint:autofix": "lerna run lint:autofix --parallel",
    "test": "lerna run test --parallel",
    "link-all": "lerna exec -- yarn link",
    "unlink-all": "lerna exec -- yarn unlink"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akropolisio/akropolis-web.git"
  },
  "keywords": [
    "ethereum",
    "akropolis",
    "dapp",
    "rxjs"
  ],
  "author": "Akropolis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akropolisio/akropolis-web/issues"
  },
  "homepage": "https://github.com/akropolisio/akropolis-web#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@date-io/date-fns": "^1.3.13", 
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@material-ui/pickers": "^3.3.10",
    "@material-ui/styles": "^4.11.3",
    "@rollup/plugin-url": "5.0.1",
    "@types/bn.js": "^5.1.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.11",
    "@types/ramda": "^0.27.14",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "bn.js": "^5.2.0",
    "classnames": "^2.0.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.28",
    "cz-conventional-changelog": "^3.0.2",
    "date-fns": "^2.21.1",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lerna": "^3.19.0",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-number-format": "^4.4.1",
    "rollup-plugin-rebase": "^3.5.4",
    "ts-jest": "^26.5.4",
    "ts-node": "^8.5.0",
    "ts-toolbelt": "^6.15.5",
    "tsdx": "^0.12.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "yarn-deduplicate": "^2.1.1"
  }
}
