{
  "name": "akropolis-web",
  "description": "Code shared between Akropolis web services.",
  "scripts": {
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist/ && rm -rf node_modules",
    "build": "lerna run build",
    "start": "lerna run --parallel --no-bail start -- -- --verbose --noClean",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --parallel",
    "link-all": "lerna exec -- yarn link",
    "unlink-all": "lerna exec -- yarn unlink"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akropolisio/akropolis-web.git"
  },
  "keywords": [
    "ethereum",
    "akropolis",
    "dapp",
    "rxjs"
  ],
  "author": "Akropolis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akropolisio/akropolis-web/issues"
  },
  "homepage": "https://github.com/akropolisio/akropolis-web#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/styles": "^4.10.0",
    "@rollup/plugin-url": "5.0.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.11",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.28",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "rollup-plugin-rebase": "^3.5.4",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.0",
    "ts-toolbelt": "^6.3.3",
    "tsdx": "^0.12.0",
    "typescript": "^3.7.2"
  }
}
